<%- include partials/header.ejs %>

<body id="home">
  <section>
    <div class="container">
      <div class="row">
        <div class="col-md-6 d-flex">
          <div class="align-self-center">
            <!-- TEXTO-->
            <div class="jumbotron mt-5 bg-info">
              <!-- INICIO JUMBOTRON-->
              <h1 class="display-4">Jokenpô</h1>
              <p class="lead">
                <span class="h5">As regras são as seguintes:</span>
                <ul>
                  <li>
                    Pedra empata com Pedra e ganha de Tesoura
                  </li>
                  <li>
                    Tesoura empata com Tesoura e ganha de Papel
                  </li>
                  <li>
                    Papel empata com Papel e ganha de Pedra
                  </li>
                </ul>
              </p>
            </div> <!-- FIM JUMBOTRON-->

            <div>
              <!-- INICIO FORMULÁRIO-->
              <form class="form-group formulario" method="POST" action="/partida">
                <input type="text" placeholder="Digite seu nome" class="form-control mb-2" name="nome">
                <button class="btn btn-dark btn-lg btn-block">
                  <i class="far fa-hand-rock"></i>
                  Iniciar partida
                  <i class="far fa-hand-scissors"></i>
                </button>
              </form>
            </div> <!-- FIM FORMULÁRIO-->
          </div>
        </div> <!-- FIM TEXTO-->

        <div class="col-md-6">
          <!-- TABELA-->
          <div class="container mt-5 bg-info">
            <h1 id="tituloRanking">Ranking</h1>
            <div id="tabela" class=" tabela">
              <table class="table table-hover table-secondary">
                <tr class="bg-dark text-light">
                  <th>Nome</th>
                  <th>Pontuação</th>
                </tr>
                <% ranking.forEach(ranking => { %>
                <tr>
                  <td><%= ranking.nome %></td>
                  <td><%= ranking.pontuacao %></td>
                </tr>
                <% }) %>
              </table>
            </div>
          </div>
        </div> <!-- FIM TABELA-->
      </div>
    </div>
  </section>
</body>
<%- include partials/footer.ejs %>